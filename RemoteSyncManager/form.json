{
    "elements": [
        {
            "type": "ExpansionPanel",
            "caption": "Global Configuration",
            "items": [
                { "type": "CheckBox", "name": "DebugMode", "caption": "Debug Mode (Verbose Log)" },
                { "type": "CheckBox", "name": "AutoCreate", "caption": "Use Auto-Create" },
                { "type": "CheckBox", "name": "ReplicateProfiles", "caption": "Replicate Variable Profiles" },
                {
                    "type": "SelectInstance",
                    "name": "LocalPasswordModuleID",
                    "caption": "Local Secrets Module",
                    "validModules": ["{7C5A3841-3F7B-4D2A-9E1C-5B6D8F9A0E12}"]
                },
                {
                    "type": "Select",
                    "name": "LocalServerKey",
                    "caption": "Local Server Key (Used by Remote)",
                    "options": []
                }
            ]
        },
        { "type": "Label", "caption": "Step 1: Define Remote Targets" },
        {
            "type": "List",
            "name": "Targets",
            "rowCount": 5, "add": true, "delete": true,
            "columns": [
                { "name": "Name", "caption": "Folder Name", "width": "150px", "add": "", "edit": { "type": "ValidationTextBox" } },
                { "name": "RemoteKey", "caption": "Remote Server Key", "width": "200px", "add": "", "edit": { "type": "Select", "options": [] } },
                { "name": "RemoteRootID", "caption": "Data ID", "width": "120px", "add": 10000, "edit": { "type": "NumberSpinner", "minimum": 10000, "maximum": 99999 } },
                { "name": "RemoteScriptRootID", "caption": "Script ID", "width": "120px", "add": 10000, "edit": { "type": "NumberSpinner", "minimum": 10000, "maximum": 99999 } },
                { "name": "RemoteSecretsID", "caption": "SEC ID", "width": "120px", "add": 10000, "edit": { "type": "NumberSpinner", "minimum": 10000, "maximum": 99999 } }
            ]
        },
        { "type": "Label", "caption": "Step 2: Map Local Roots" },
        {
            "type": "List",
            "name": "Roots",
            "rowCount": 4, "add": true, "delete": true,
            "columns": [
                { "name": "LocalRootID", "caption": "Local Object", "width": "300px", "add": 0, "edit": { "type": "SelectObject" } },
                { "name": "TargetFolder", "caption": "Assign to Folder", "width": "200px", "add": "", "edit": { "type": "Select", "options": [] } }
            ]
        },
        { "type": "Label", "caption": "Step 3: Individual Selection per Target" }
    ],
    "actions": [
        { "type": "Button", "name": "BtnSave", "caption": "ðŸ’¾ APPLY & SAVE ALL SELECTIONS", "onClick": "RSM_SaveSelections($id);" },
        { "type": "Label", "caption": "________________________________________________________________________________" },
        { "type": "Button", "caption": "Force Refresh UI", "onClick": "RSM_UpdateUI($id);" }
    ]
}