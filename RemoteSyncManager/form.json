{
    "elements": [
        { "type": "Label", "caption": "Step 1: Define Remote Targets (Folders)" },
        {
            "type": "List",
            "name": "Targets",
            "caption": "Remote Targets",
            "rowCount": 4,
            "add": true,
            "delete": true,
            "columns": [
                { "name": "Name", "caption": "Folder Name", "width": "200px", "edit": { "type": "ValidationTextBox" } },
                { "name": "RemoteKey", "caption": "SEC Server Key", "width": "200px", "edit": { "type": "ValidationTextBox" } },
                { "name": "RemoteRootID", "caption": "Remote Target ID", "width": "120px", "edit": { "type": "NumberSpinner" } }
            ]
        },
        { "type": "Label", "caption": "Step 2: Map Local Roots to Folders" },
        {
            "type": "List",
            "name": "Roots",
            "caption": "Local Source Roots",
            "rowCount": 4,
            "add": true,
            "delete": true,
            "columns": [
                { "name": "LocalRootID", "caption": "Local Object (Source)", "width": "300px", "edit": { "type": "SelectObject" } },
                { 
                    "name": "TargetFolder", 
                    "caption": "Assign to Folder", 
                    "width": "200px", 
                    "edit": { "type": "Select", "options": [] } 
                }
            ]
        },
        { "type": "Label", "caption": "Step 3: Final Sync Selection (Auto-Generated)" },
        {
            "type": "List",
            "name": "SyncList",
            "caption": "Consolidated Variables",
            "rowCount": 15,
            "add": false,
            "delete": false,
            "sort": { "column": "Folder", "direction": "ascending" },
            "columns": [
                { "name": "Folder", "caption": "Target Folder", "width": "150px" },
                { "name": "ObjectID", "caption": "ID", "width": "80px" },
                { "name": "Name", "caption": "Variable Name", "width": "auto" },
                { "name": "Active", "caption": "Sync", "width": "60px", "edit": { "type": "CheckBox" } }
            ]
        }
    ],
    "actions": [
        { "type": "Button", "caption": "Force Refresh", "onClick": "RSM_UpdateUI($id);" }
    ]
}