{
    "elements": [
        { "type": "ExpansionPanel", "caption": "Global Configuration", "items": [
            { "type": "CheckBox", "name": "DebugMode", "caption": "Debug Mode (Verbose Log)" },
            { "type": "CheckBox", "name": "AutoCreate", "caption": "Use Auto-Create (Create missing remote objects)" },
            { "type": "CheckBox", "name": "ReplicateProfiles", "caption": "Replicate Variable Profiles (local â†’ remote)" },
            { 
                "type": "SelectInstance", 
                "name": "LocalPasswordModuleID", 
                "caption": "Local Secrets Module",
                "validModules": ["{7C5A3841-3F7B-4D2A-9E1C-5B6D8F9A0E12}"] 
            },
            { 
                "type": "Select", 
                "name": "LocalServerKey", 
                "caption": "Local Server Key (Used by Remote for Actions)",
                "options": [] 
            }
        ]},
        { "type": "Label", "caption": "Step 1: Define Remote Targets (Folders) & Connection" },
        {
            "type": "List",
            "name": "Targets",
            "caption": "Remote Targets",
            "rowCount": 5,
            "add": true,
            "delete": true,
            "columns": [
                { 
                    "name": "Name", 
                    "caption": "Folder Name", 
                    "width": "150px", 
                    "add": "", 
                    "edit": { "type": "ValidationTextBox" } 
                },
                { 
                    "name": "RemoteKey", 
                    "caption": "Remote Server Key", 
                    "width": "200px", 
                    "add": "", 
                    "edit": { "type": "Select", "options": [] } 
                },
                { "name": "RemoteRootID", "caption": "Data Target ID", "width": "120px", "add": 0, "edit": { "type": "NumberSpinner" } },
                { "name": "RemoteScriptRootID", "caption": "Script Home ID", "width": "120px", "add": 0, "edit": { "type": "NumberSpinner" } },
                { "name": "RemoteSecretsID", "caption": "Remote SEC ID", "width": "120px", "add": 0, "edit": { "type": "NumberSpinner" } }
            ]
        },
        { "type": "Label", "caption": "Step 2: Map Local Roots to Folders" },
        {
            "type": "List",
            "name": "Roots",
            "caption": "Local Source Roots",
            "rowCount": 4,
            "add": true,
            "delete": true,
            "columns": [
                { "name": "LocalRootID", "caption": "Local Object (Source)", "width": "300px", "add": 0, "edit": { "type": "SelectObject" } },
                { 
                    "name": "TargetFolder", 
                    "caption": "Assign to Folder", 
                    "width": "200px", 
                    "add": "", 
                    "edit": { "type": "Select", "options": [] } 
                }
            ]
        },
        { "type": "Label", "caption": "Step 3: Selection & Tools" },
        { "type": "Button", "caption": "INSTALL/UPDATE REMOTE SCRIPTS ON ALL TARGETS", "onClick": "RSM_InstallRemoteScripts($id);" },
        { "type": "Label", "caption": "Batch Tools (Set entire column)", "bold": true },
        { "type": "RowLayout", "items": [
            { "type": "Select", "name": "BatchFilter", "caption": "Target Filter:", "width": "200px", "options": [
                { "caption": "All Targets", "value": "ALL" }
            ]},
            { "type": "Label", "caption": "Sync:", "width": "40px" },
            { "type": "Button", "caption": "ALL", "onClick": "RSM_ToggleAll($id, 'Active', true, $BatchFilter);", "width": "60px" },
            { "type": "Button", "caption": "NONE", "onClick": "RSM_ToggleAll($id, 'Active', false, $BatchFilter);", "width": "60px" },
            { "type": "Label", "caption": " | Action:", "width": "50px" },
            { "type": "Button", "caption": "ALL", "onClick": "RSM_ToggleAll($id, 'Action', true, $BatchFilter);", "width": "60px" },
            { "type": "Button", "caption": "NONE", "onClick": "RSM_ToggleAll($id, 'Action', false, $BatchFilter);", "width": "60px" },
            { "type": "Label", "caption": " | Delete:", "width": "50px" },
            { "type": "Button", "caption": "ALL", "onClick": "RSM_ToggleAll($id, 'Delete', true, $BatchFilter);", "width": "60px" },
            { "type": "Button", "caption": "NONE", "onClick": "RSM_ToggleAll($id, 'Delete', false, $BatchFilter);", "width": "60px" }
        ]},
        {
            "type": "List",
            "name": "SyncList",
            "caption": "Objects to Sync",
            "rowCount": 15,
            "add": false,
            "delete": false,
            "columns": [
                { "name": "Folder", "caption": "Target", "width": "100px" },
                { "name": "ObjectID", "caption": "ID", "width": "70px" },
                { "name": "Name", "caption": "Variable Name", "width": "auto" },
                { "name": "Active", "caption": "Sync", "width": "50px", "edit": { "type": "CheckBox" } },
                { "name": "Action", "caption": "R-Action", "width": "70px", "edit": { "type": "CheckBox" } },
                { "name": "Delete", "caption": "Del Rem.", "width": "70px", "edit": { "type": "CheckBox" } }
            ]
        }
    ],
    "actions": [
        { "type": "Button", "caption": "Force Refresh UI", "onClick": "RSM_UpdateUI($id);" }
    ]
}